<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ServletDemo</display-name>
  <filter>
    <filter-name>TestFilter</filter-name>
    <filter-class>com.loft.servlet.filter.TestFilter</filter-class>
    <init-param>
      <param-name>Site</param-name>
      <param-value>菜鸟教程</param-value>
    </init-param>
  </filter>
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>com.loft.servlet.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetServlet</servlet-name>
    <servlet-class>com.loft.servlet.GetServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PostServlet</servlet-name>
    <servlet-class>com.loft.servlet.PostServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>HttpCodeServlet</servlet-name>
    <servlet-class>com.loft.servlet.HttpCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ErrorServlet</servlet-name>
    <servlet-class>com.loft.servlet.ErrorServlet</servlet-class>
  </servlet>
  <error-page>
    <error-code>404</error-code>
    <location>/ErrorServlet</location>
  </error-page>
  <error-page>
    <error-code>407</error-code>
    <location>/ErrorServlet</location>
  </error-page>
</web-app>